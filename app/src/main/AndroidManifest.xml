<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.accolade.ocr_nexus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.OCRNexus">
        <activity android:name=".PoliceLicenseActivity"></activity>
        <activity android:name=".PoliceRenewActivity" />
        <activity android:name=".UpdateRenewalActivity"
            android:parentActivityName=".MunicipalHomeActivity"/>
        <activity android:name=".UpdateLicenseActivity"
            android:parentActivityName=".MunicipalHomeActivity"/>
        <activity android:name=".UpdatePermissionActivity"
            android:parentActivityName=".MunicipalHomeActivity"/>
        <activity android:name=".UpdateComplaintActivity"
            android:parentActivityName=".MunicipalHomeActivity"/>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".MunicipalHomeActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".PoliceHomeActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".ForgotActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/fullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".firebase.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>